<%= render "shared/header" %>

<%= form_with model: @team, url: new_team_path, class: 'registration-main', local: true do |f| %>
<div class='form-wrap'>
  <div class='form-header'>
    <h1 class='form-header-text'>
      チーム登録
    </h1>
  </div>

  <%= render 'shared/error_messages', model: f.object %>

  <div class="team-group">
    <h2 class="school-name">
      <%= current_user.school_name %>
    </h2>
  <div class="team-group">
    <div class='team-text-wrap'>
      <label class="team-text">高校名</label>
    </div>
    <%= f.text_area :school_name, class:"input-default", id:"school_name", placeholder:"例) 明訓高校" %>
  </div>
  <div class="team-group">
    <div class='team-text-wrap'>
      <label class="team-text">メールアドレス</label>
 
    </div>
    <%= f.email_field :email, class:"input-default", id:"email", placeholder:"パソコンまたはスマートフォン どちらでも可", autofocus: true %>
  </div>
  <div class="team-group">
    <div class='team-text-wrap'>
      <label class="team-text">パスワード</label>
    </div>
    <%= f.password_field :password, class:"input-default", id:"password", placeholder:"6文字以上の半角英数字" %>
    <p class='info-text'>※英字と数字の両方を含めて設定してください</p>
  </div>
  
  <div class='team-btn'>
    <%= f.submit "登録完了！" ,class:"team-skyblue-btn" %>
    <%=link_to 'もどる', root_path, class:"back-btn" %>
  </div>
  <p class='team-info'>練習試合を申し込みましょう！</p>
</div>
<% end %>

<%= render "shared/footer" %>

