<%= render "shared/header" %>

<main class="main">
  <div class="team_wrapper">
    <% if user_signed_in? && current_user.id == @team.user_id %>
    <div class="team_manage">
      <%= link_to "編集する", edit_team_path(@team.id), class: "btn-team" %>
      <%= link_to "削除", team_path(@team.id), method: :delete, class:"btn-team" %>
    </div>
    <% end %>
  </div>

  <div class="team_center">
    <div class="team_detail">
      <p class="detail__title">高校名</p>
      <p class="detail__message">
      <%= @team.user.school_name %>
      </p>
    </div>
    
    <div class="team_detail">
      <p class="detail__title">都道府県</p>
      <p class="detail__message">
      <%= @team.area.name %>
      </p>
    </div>

    <div class="team_detail">
      <p class="detail__title">部員数</p>
      <p class="detail__message">
      <%= @team.member.name %>
      </p>
    </div>

    <div class="team_detail">
      <p class="detail__title">チームのレベル</p>
      <p class="detail__message">
      <%= @team.team_level.name %>
      </p>
    </div>

    <div class="team_detail">
      <p class="detail__title">自己紹介</p>
      <p class="detail__message">
      <%= @team.profile %>
      </p>
    </div>
    <%=link_to 'もどる', root_path, class:"back-index" %>
  </div>
</main>


<%= render "shared/footer" %>