<%= render "shared/header" %>

<% breadcrumb :sessions %>

<%= form_with model: @user, url: user_session_path, class: 'registration-main', local: true do |f| %>
<div class='form-wrap'>
  <div class='form-header'>
    <h1 class='form-header-text'>
      ログイン
    </h1>
  </div>

  <%= render 'shared/error_messages', model: f.object %>

  <div class="form-group">
    <div class='form-text-wrap'>
      <label class="form-text">メールアドレス</label>
 
    </div>
    <%= f.email_field :email, class:"input-default", id:"email", placeholder:"パソコンまたはスマートフォン どちらでも可", autofocus: true %>
  </div>
  <div class="form-group">
    <div class='form-text-wrap'>
      <label class="form-text">パスワード</label>
    </div>
    <%= f.password_field :password, class:"input-default", id:"password", placeholder:"6文字以上の半角英数字" %>
    <p class='info-text'>※パスワードを忘れた場合は、お問い合わせください！</p>
  </div>
  
  <div class='register-btn'>
    <%= f.submit "ログインする" ,class:"register-skyblue-btn" %>
  </div>
</div>
<% end %>

<%= render "shared/footer" %>

