<%= render "shared/header" %>

<%= form_with model: @user, url: user_registration_path, class: 'registration-main', local: true do |f| %>
<div class='form-wrap'>
  <div class='form-header'>
    <h1 class='form-header-text'>
      新規登録
    </h1>
  </div>

  <%= render 'shared/error_messages', model: f.object %>

  <div class="form-group">
    <div class='form-text-wrap'>
      <label class="form-text">お名前</label>
    </div>
    <%= f.text_area :teacher_name, class:"input-default", id:"teacher_name", placeholder:"例) 藤村甲子園" %>
  </div>
  <div class="form-group">
    <div class='form-text-wrap'>
      <label class="form-text">高校名</label>
    </div>
    <%= f.text_area :school_name, class:"input-default", id:"school_name", placeholder:"例) 明訓高校" %>
  </div>
  <div class="form-group">
    <div class='form-text-wrap'>
      <label class="form-text">メールアドレス</label>
 
    </div>
    <%= f.email_field :email, class:"input-default", id:"email", placeholder:"パソコンまたはスマートフォン どちらでも可", autofocus: true %>
  </div>
  <div class="form-group">
    <div class='form-text-wrap'>
      <label class="form-text">パスワード</label>
    </div>
    <%= f.password_field :password, class:"input-default", id:"password", placeholder:"6文字以上の半角英数字" %>
    <p class='info-text'>※英字と数字の両方を含めて設定してください</p>
  </div>
  <div class="form-group">
    <div class='form-text-wrap'>
      <label class="form-text">パスワード(確認)</label>

    </div>
    <%= f.password_field :password_confirmation, class:"input-default", id:"password-confirmation", placeholder:"同じパスワードを入力して下さい" %>
    <p class='info-text'>※確認のため再度ご入力ください</p>
  </div>
  
  <div class='register-btn'>
    <%= f.submit "登録完了！" ,class:"register-red-btn" %>
  </div>
  <p class='register-info'>ありがとうございます！</p>
</div>
<% end %>

<%= render "shared/footer" %>

