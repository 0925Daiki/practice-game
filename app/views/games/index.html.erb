<%= render "shared/header" %>

<p class="game-head">練習試合募集一覧</p>
<div class='game-wrap'>
  <% @game.each do |game| %>
    <article class="game-list">
      <div class="game-school-name">
        <%= game.user.school_name %>
      </div>
      <ul class="game-lists">
        <li><%= game.recruit.name %></li>
      </ul>
      <%= link_to "詳細ページへ", game_path(game.id), class: "btn-game-show" %>
    </article>
  <% end %>

  <%= search_form_for @q do |f| %>
  <%= f.label :practice_date %>
  <%= f.collection_select :practice_date_eq, @games, :id, :practice_date, include_blank: '指定なし' %>
  <%= f.submit %>
<% end %>
</div>
  <div class="show-index-back">
  <%=link_to 'もどる', root_path, class:"back-btn" %>
  </div>
<%= render "shared/footer" %>